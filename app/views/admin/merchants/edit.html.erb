<%= render partial: "app_partials/header", locals: {header: "Edit #{@merchant.name}"} %>
<%= render partial: "app_partials/link_to_dash",
           locals: {dash_pth: admin_path,
                    link_2: "Invoices", l2_pth: admin_invoices_path,
                    link_3: "Merchants", l3_pth: admin_merchants_path} %>

<%= form_with url: "/admin/merchants/#{@merchant.id}?change=name", method: :patch, data:{turbo: false} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :value => @merchant.name %>
  
  <%= f.submit "Submit" %>
  <% end %>